<form method="post" action="{{ path('product_delete', {'id': product.id}) }}" onsubmit="return confirm('{{ 'product.delete.confirm'|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-danger">{{ 'product.delete.button'|trans }}</button>
</form>