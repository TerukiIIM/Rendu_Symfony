{% extends 'base.html.twig' %}

{% block title %}{{ 'recent_users.title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ 'recent_users.header'|trans }}</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>{{ 'recent_users.user_id'|trans }}</th>
                    <th>{{ 'recent_users.email'|trans }}</th>
                    <th>{{ 'recent_users.first_name'|trans }}</th>
                    <th>{{ 'recent_users.last_name'|trans }}</th>
                    <th>{{ 'recent_users.registration_date'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for user in recentUsers %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.createdAt|date('Y-m-d H:i') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}